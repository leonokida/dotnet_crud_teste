@model MeuProjetoMVC.Models.Produto

<h1>Adicionar Produto</h1>

<form method="post">
    <label>Descrição:</label>
    <input type="text" asp-for="dscProduto" required />
    <br />
    
    <label>Valor Unitário:</label>
    <input type="number" asp-for="vlrUnitario" step="0.01" required />
    <br />

    <button type="submit">Salvar</button>
    <a href="/Produto">Cancelar</a>
</form>
