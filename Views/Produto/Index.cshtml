@model List<MeuProjetoMVC.Models.Produto>
@{
    ViewData["Title"] = "Produtos";
}

<h1>Lista de Produtos</h1>

<a href="/Produto/Criar">Adicionar Produto</a>

<form method="get" action="/Produto/Index">
    <input type="text" name="search" placeholder="Pesquisar por nome" value="@Context.Request.Query["search"]" />
    <button type="submit">Buscar</button>
</form>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var produto in Model)
        {
            <li>
                Nome: @produto.dscProduto <br>
                Valor Unit√°rio: R$ @produto.vlrUnitario <br>
                <a href="/Produto/Editar/@produto.idProduto">Editar</a>
                <a href="/Produto/Deletar/@produto.idProduto">Excluir</a>
            </li>
        }
    </ul>
}
else
{
    <p>Nenhum produto cadastrado.</p>
}
